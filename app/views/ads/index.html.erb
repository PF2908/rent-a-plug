<p id="notice"><%= notice %></p>

<h1>Ads</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Nb of plug</th>
      <th>Color</th>
      <th>Cable length</th>
      <th>Location</th>
      <th>Usb</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.title %></td>
        <td><%= ad.number_of_plug %></td>
        <td><%= ad.color %></td>
        <td><%= ad.cable_length %></td>
        <td><%= ad.location %></td>
        <td><%= ad.usb %></td>
        <td><%= ad.description %></td>

        <td><%= link_to 'Show', ad %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ad', new_ad_path %>
